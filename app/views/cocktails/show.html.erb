<div class="top-picture" style="background-image: url(<%= @cocktail.photo %>); height: 800px;
  background-position: center;
  background-size: cover;">
  <%= link_to cocktails_path do %>
    <i class="fas fa-long-arrow-alt-left"></i>
  <% end %>
</div>

<div class="container" style="margin-top: -400px;">
  <div class="cocktail-show-card">
    <div class="d-flex justify-content-between">
      <div class="">
        <h1 style="font-size: 48px;"><%= @cocktail.name %></h1>
        <p style="font-size: 16px;">This is a description, I will be migrated into the cocktail model. This is a description, I will be migrated into the cocktail model. This is a description, I will be migrated into the cocktail model. This is a description, I will be migrated into the cocktail model. This is a description, I will be migrated into the cocktail model.</p>
      </div>

      <div class="cocktail-show-card">
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
          <div class="form-inputs">
            <%= f.input :description %>
          </div>
          <div class="form_inputs">
            <%= f.association :ingredient, collection: Ingredient.all %>
          </div>
          <div class="form-actions btn btn-dose">
            <%= f.button :submit, style: "color: white" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="d-flex">
      <% @cocktail.doses.each do |dose| %>
        <div class="flip-card dose-circle">
          <div class="flip-card-inner">
            <div class="flip-card-front dose-circle">
              <p><%= dose.ingredient.name %></p>
            </div>
            <div class="flip-card-back dose-circle">
              <p><%= dose.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
